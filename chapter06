        // Question generation functions
        function generateQuestion61() {
            document.getElementById('feedback-61').style.display = 'none';
            document.getElementById('steps-61').style.display = 'none';
            
            const answerInput = document.getElementById('answer-61');
            answerInput.value = '';
            answerInput.className = 'answer-input';
            answerInput.disabled = false;
            
            currentQuestion61 = hypothesisFrameworkQuestions[Math.floor(Math.random() * hypothesisFrameworkQuestions.length)];
            
            document.getElementById('question-61-content').innerHTML = currentQuestion61.question;
            document.getElementById('hint-61').innerHTML = currentQuestion61.hint;
        }

        function checkAnswer61() {
            const userAnswer = document.getElementById('answer-61').value.trim().toLowerCase();
            const answerInput = document.getElementById('answer-61');
            const feedbackDiv = document.getElementById('feedback-61');
            
            if (!userAnswer) {
                alert('Please enter an answer first!');
                return;
            }
            
            const isCorrect = currentQuestion61.correctAnswers.some(correct => 
                correct.toLowerCase() === userAnswer
            );
            
            answerInput.className = `answer-input ${isCorrect ? 'correct' : 'incorrect'}`;
            
            feedbackDiv.style.display = 'block';
            feedbackDiv.className = `question-feedback ${isCorrect ? 'feedback-correct' : 'feedback-incorrect'}`;
            feedbackDiv.innerHTML = `
                ${isCorrect ? '‚úÖ Correct!' : '‚ùå Incorrect.'} 
                ${currentQuestion61.explanation}
            `;
            
            if (isCorrect) {
                answerInput.disabled = true;
            }
        }

        function showSteps61() {
            const stepsDiv = document.getElementById('steps-61');
            stepsDiv.style.display = 'block';
            stepsDiv.innerHTML = currentQuestion61.steps;
        }

        // Similar functions for questions 62-65 (abbreviated for space)
        function generateQuestion62() {
            document.getElementById('feedback-62').style.display = 'none';
            document.getElementById('steps-62').style.display = 'none';
            
            const answerInput = document.getElementById('answer-62');
            answerInput.value = '';
            answerInput.className = 'answer-input';
            answerInput.disabled = false;
            
            currentQuestion62 = errorTypesQuestions[Math.floor(Math.random() * errorTypesQuestions.length)];
            
            document.getElementById('question-62-content').innerHTML = currentQuestion62.question;
            document.getElementById('hint-62').innerHTML = currentQuestion62.hint;
        }

        function checkAnswer62() {
            const userAnswer = document.getElementById('answer-62').value.trim().toLowerCase();
            const answerInput = document.getElementById('answer-62');
            const feedbackDiv = document.getElementById('feedback-62');
            
            if (!userAnswer) {
                alert('Please enter an answer first!');
                return;
            }
            
            const isCorrect = currentQuestion62.correctAnswers.some(correct => 
                correct.toLowerCase() === userAnswer
            );
            
            answerInput.className = `answer-input ${isCorrect ? 'correct' : 'incorrect'}`;
            
            feedbackDiv.style.display = 'block';
            feedbackDiv.className = `question-feedback ${isCorrect ? 'feedback-correct' : 'feedback-incorrect'}`;
            feedbackDiv.innerHTML = `
                ${isCorrect ? '‚úÖ Correct!' : '‚ùå Incorrect.'} 
