        // General question generation function
        function generateQuestionGeneral(questionArray, currentQuestionVar, contentId, hintId) {
            const randomIndex = Math.floor(Math.random() * questionArray.length);
            window[currentQuestionVar] = questionArray[randomIndex];
            
            document.getElementById(contentId).innerHTML = window[currentQuestionVar].question;
            document.getElementById(hintId).innerHTML = `üí° ${window[currentQuestionVar].hint}`;
        }

        // General answer checking function
        function checkAnswerGeneral(answerId, feedbackId, currentQuestionVar) {
            const userAnswer = document.getElementById(answerId).value.toLowerCase().trim();
            const currentQuestion = window[currentQuestionVar];
            
            if (!currentQuestion) return;
            
            const isCorrect = currentQuestion.correctAnswers.some(answer => 
                userAnswer === answer.toLowerCase()
            );
            
            const feedbackElement = document.getElementById(feedbackId);
            if (isCorrect) {
                feedbackElement.innerHTML = `<div class="correct">‚úÖ Correct! ${currentQuestion.explanation}</div>`;
                feedbackElement.className = 'question-feedback correct-feedback';
            } else {
                feedbackElement.innerHTML = `<div class="incorrect">‚ùå Incorrect. ${currentQuestion.explanation}</div>`;
                feedbackElement.className = 'question-feedback incorrect-feedback';
            }
            feedbackElement.style.display = 'block';
        }

        // General show steps function
        function showStepsGeneral(stepsId, currentQuestionVar) {
            const currentQuestion = window[currentQuestionVar];
            if (!currentQuestion) return;
            
            const stepsElement = document.getElementById(stepsId);
            stepsElement.innerHTML = currentQuestion.steps;
            stepsElement.style.display = 'block';
        }

